<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" updateCheck="false" monitoring="autodetect">

	<diskStore path="java.io.tmpdir" />

	<!-- 系统用户缓存 -->
	<cache name="userCache" maxElementsInMemory="10000" eternal="true" overflowToDisk="true" timeToIdleSeconds="0" timeToLiveSeconds="0" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120">
	</cache>

	<cache name="dictCache" maxElementsInMemory="10000" eternal="true" overflowToDisk="true" timeToIdleSeconds="0" timeToLiveSeconds="0" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120">
	</cache>

	<cache name="removedSessionCache" maxElementsInMemory="10000" eternal="false" overflowToDisk="true" timeToIdleSeconds="0" timeToLiveSeconds="0" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120" memoryStoreEvictionPolicy="LRU">
	</cache>

	<cache name="sessionCache" maxElementsInMemory="10000" eternal="true" overflowToDisk="true" timeToIdleSeconds="0" timeToLiveSeconds="0" diskPersistent="false"
		diskExpiryThreadIntervalSeconds="120">
	</cache>

</ehcache>
